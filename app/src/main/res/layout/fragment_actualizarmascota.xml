<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/fondossss12"
    android:backgroundTintMode="multiply"
    android:backgroundTint="#23EDC616"
    android:layout_height="match_parent"
    class = ".ui.actualizarmascota.ActualizarmascotaFragment"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/vista"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/dosis_medium"
                        android:padding="20dp"
                        android:text="@string/tituloactualizar"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RadioGroup>

                <Spinner
                    android:id="@+id/elespiner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/spinner_style"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dosis_medium"
                    android:text="TextView"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/vista1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/perfilFotoAnimal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="25dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/fotoaqu" />

                    <TextView
                        android:id="@+id/Tespecie"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/dosis_medium"
                       />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vista2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    android:foregroundGravity="center"

                    android:gravity="center"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:foregroundGravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nombre"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/nombremascota"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/vacio"
                                android:fontFamily="@font/dosis_medium"
                                android:inputType="textPersonName"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/raza"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="18sp" />


                            <EditText
                                android:id="@+id/razaAni"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/vacio"
                                android:fontFamily="@font/dosis_medium"
                                android:inputType="text"  />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dosis_medium"
                                android:text="@string/fechanacimiento"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/fechanaci"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:fontFamily="@font/dosis_medium"
                                android:ems="10"
                                android:focusable="false"
                                android:hint="@string/vacio"
                                android:inputType="none" />

                            <TextView
                                android:id="@+id/textView9c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/color"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/colorAnimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/dosis_medium"
                                android:hint="@string/vacio"
                                android:inputType="text"  />


                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sexo"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/spinnerSexo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ems="10"
                                android:fontFamily="@font/dosis_medium"
                                android:enabled="false"
                                android:hint="@string/vacio"
                                android:inputType="text" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historiac"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/numerohistoriaclinica"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/vacio"
                                android:fontFamily="@font/dosis_medium"
                                android:inputType="text" />


                            <Button
                                android:id="@+id/actualizarmascota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_margin="20dp"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/dosis_medium"
                                android:text="@string/actualizar"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ddddddddd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dosis_medium"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>